# ─────────────────────────────────────────────────────────
# TRACE Environment Variables
# Copy to .env and fill in values before running.
# ─────────────────────────────────────────────────────────

# ── Database ─────────────────────────────────────────────
DATABASE_URL=postgresql://trace:trace@localhost:5432/trace

# ── Redis ────────────────────────────────────────────────
REDIS_URL=redis://localhost:6379

# ── VeChain ──────────────────────────────────────────────
VECHAIN_NODE_URL=http://localhost:8669

# Deployer wallet private key (hex, with 0x prefix)
# Generate: openssl rand -hex 32
DEPLOYER_PRIVATE_KEY=0x

# Fee delegation service URL (optional — leave empty for dev)
FEE_DELEGATOR_URL=

# ── Contract Addresses ───────────────────────────────────
# Populated automatically after: pnpm --filter @trace/contracts deploy:solo
MATERIAL_REGISTRY_ADDRESS=
MARKETPLACE_ADDRESS=
CBT_ADDRESS=
QUALITY_ASSURANCE_ADDRESS=
IOT_ORACLE_ADDRESS=
GOVERNANCE_ADDRESS=
HUB_REGISTRY_ADDRESS=
CONTRACT_REGISTRY_ADDRESS=

# ── Object Storage (MinIO) ───────────────────────────────
MINIO_ENDPOINT=localhost
MINIO_PORT=9000
MINIO_USE_SSL=false
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_BUCKET_PASSPORTS=passports
MINIO_BUCKET_REPORTS=reports

# ── Search (Meilisearch) ─────────────────────────────────
MEILISEARCH_URL=http://localhost:7700
MEILISEARCH_KEY=masterKey

# ── Auth ─────────────────────────────────────────────────
# Generate: openssl rand -base64 48
JWT_SECRET=change-this-to-a-random-secret-at-least-32-chars
JWT_EXPIRY=7d

# ── App ──────────────────────────────────────────────────
API_PORT=3001
WEB_URL=http://localhost:3000
API_URL=http://localhost:3001
NODE_ENV=development
LOG_LEVEL=debug
